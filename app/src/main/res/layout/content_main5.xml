<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sindhura.activitymonitering.Main5Activity"
    tools:showIn="@layout/activity_main5">

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Task 1"
        android:textColor="#ffffff"
        android:background="#0000A0"
        android:textSize="20dp"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Task 2"
        android:textColor="#ffffff"
        android:background="#0000A0"
        android:textSize="20dp"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Task 3"
        android:textColor="#ffffff"
        android:background="#0000A0"
        android:textSize="20dp"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Task 4"
        android:textColor="#ffffff"
        android:background="#0000A0"
        android:textSize="20dp"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox3"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Task 5"
        android:textColor="#ffffff"
        android:background="#0000A0"
        android:textSize="20dp"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/checkBox4"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Task 6"
        android:textColor="#ffffff"
        android:background="#0000A0"
        android:textSize="20dp"
        android:id="@+id/checkBox6"
        android:layout_below="@+id/checkBox5"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Task 7"
        android:textColor="#ffffff"
        android:background="#0000A0"
        android:textSize="20dp"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/checkBox6"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#ffffff"
        android:background="#347C17"
        android:id="@+id/button8"
        android:layout_below="@+id/checkBox7"
        android:layout_alignLeft="@+id/checkBox7"
        android:layout_alignStart="@+id/checkBox7"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#ffffff"
        android:background="#F70D1A"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button8"
        android:layout_alignRight="@+id/checkBox7"
        android:layout_alignEnd="@+id/checkBox7"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />


</RelativeLayout>
